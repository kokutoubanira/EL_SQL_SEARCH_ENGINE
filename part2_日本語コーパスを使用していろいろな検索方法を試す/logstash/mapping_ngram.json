{
  "template": "imdtablengram",
  "settings": {
    "analysis": {
      "filter": {
        "my_ngram": {
          "type": "ngram",
          "min_gram": 2,
          "max_gram": 3
        }
      },
      "analyzer": {
        "my_kuromoji_analyzer": {
          "type": "custom",
          "tokenizer": "kuromoji_tokenizer",
                    "filter": [
            "kuromoji_stemmer",
            "my_ngram"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "id": {
          "type": "integer"
      },
      "content": {
        "type": "text",
        "analyzer": "my_kuromoji_analyzer",
              "search_analyzer": "my_kuromoji_analyzer"
      }
    }
  }
}